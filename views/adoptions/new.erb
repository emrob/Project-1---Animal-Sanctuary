<h2>New Adoption:</h2>

<form action="/adoption" method="post">

<label>
  Select an Owner:
  <select name="owner_id">
    <% for owner in @owners %>
    <option value="<%= owner.id %>"><%=owner.name %></option>
    <% end %>
  </select>
</label>

<label>
  Select an animal:
  <select name="animal_id">
    <% for animal in @animals %>
    <% if animal.adoption_status == "Ready for adoption" %>
    <option value="<%= animal.id %>"><%= animal.name %>
    </option>
    <% end %>
    <% end %>
  </select>
</label>

<input type="submit" value="Submit" />


</form>
