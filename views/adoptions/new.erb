<h1>New Adoption:</h1>

<form action="/adoption" method="post">

<label>
  Select an Owner:
  <select name="owner_id">
    <% for owner in @owners %>
    <option value="<%= owner.id %>"><%=owner.name %></option>
    <% end %>
  </select>
</label>

<label>
  Select an animal:
  <select name="animal_id">
    <% for animal in @animals %>
    <option value="<% animal.id %>"><%= animal.name %>
    </option>
    <% end %>
  </select>
</label>

<input type="submit" value="Submit" />


</form>
