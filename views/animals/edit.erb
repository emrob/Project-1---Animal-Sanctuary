<form action="/animals/<%= @animal.id %>" method="post">
  <label for="name">Name:</label>
  <input type="text" name="name" id="name" value="<%= @animal.name %>"/>

  <label for="type">Type:</label>
  <input type="text" name="type" id="type" value="<%= @animal.type %>"/>

  <label for="age">Age:</label>
  <input type="number" name="Age" id="age" value="<%= @animal.age %>"/>

  <label for="days_in_care">Number of Days in Care:</label>
  <input type="number" name="days_in_care" id="days_in_care" value="<%= @animal.days_in_care %>"/>

  <label for="adoption_status">Adoption Status:</label>
  <input type="text" name="adoption_status" id="adoption_status" value="<%= @animal.adoption_status %>"/>

  <input type="submit" value="Edit Animal">

</form>
