<h2>All Animals</h2>


<form method="Get" action="/animals/new" >
  <input type="submit" value="Add a new animal"/>

</form>


<ul>
  <style> li span {position: relative; left: -20px;} </style>
<% @animal.each do |animal| %>
<li>
<p><span><strong>Name:</strong> <%= animal.name()%></span></p>

<img height ="160px"  src = "<%=animal.photo%>" alt ="<%=animal.name%>">


<p><span><a href="/animals/<%= animal.id %>">Click here for more details</a></span></p>
</li>
<% end %>
</ul>
