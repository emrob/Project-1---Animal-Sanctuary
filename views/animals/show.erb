
<h2><%= @animal.name()%>'s Details:</h2>

<img height ="300px"  src = "<%=@animal.photo%>" alt ="<%=@animal.name%>">



<p><strong>Name:</strong> <%= @animal.name()%></p>
<p><strong>Type:</strong> <%= @animal.type()%></p>
<p><strong>Age:</strong> <%= @animal.age()%></p>
<p><strong>Arrival Date:</strong> <%=@animal.arrival_date()%></p>
<p><strong>Adoption Status:</strong> <%=@animal.adoption_status()%></p>






<form method="Get" action="/animals/<%= @animal.id %>/edit" >
  <input type="submit" value="Edit"/>

</form>



<form method="Post" action="/animals/<%= @animal.id %>/delete" >
  <input type="submit" value="Delete"/>

</form>
