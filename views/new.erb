<form action="/animals" method="post">

  <label for="name">Name:</label>
  <input type="text" name="Name" id="name"/>

  <label for="type">Type:</label>
  <input type="text" name="Type" id="Type"/>

  <label for="age">Age:</label>
  <input type="number" name="Age" id="Age"/>

  <label for="days_in_care">Number of days in care:</label>
  <input type="text" name="days_in_care" id="days_in_care"/>

  <label for="adoption_status">Adoption Status:</label>
  <select name="adoption_status" id="status">
    <option value="Adopted">Adopted</option>
    <option value="Ready for a new home">Ready for a new home</option>
    <option value="Being trained">Being trained</option>

  </select>

  <input type="submit" name="Add new animal" />

</form>
